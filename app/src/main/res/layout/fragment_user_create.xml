<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/im_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/logo_greent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="-28dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="@color/tech_arion"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="25dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/txtView"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Create employee id " />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_create_user_id"
                    style="@style/AllEditText"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="TAPE0011"
                    android:inputType="textEmailAddress"
                    android:maxLength="31" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_full_name"
                    style="@style/AllEditText"
                    android:background="@drawable/edit_text_background"
                    android:hint="Full name"
                    android:inputType="textEmailAddress"
                    android:maxLength="31" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmailAddress"
                    style="@style/AllEditText"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLength="31" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_password"
                    app:endIconMode="password_toggle"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:endIconTint="@color/tech_arion"
                    style="@style/AllEditText">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        style="@style/AllEditText"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/password"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_confirm_password"
                    app:endIconMode="password_toggle"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:endIconTint="@color/tech_arion"
                    style="@style/AllEditText">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_confirm_password"
                        style="@style/AllEditText"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Confirm password"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/txt_error"
                    style="@style/txtView"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/red" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_submit"
                    style="@style/ButtonStyle"
                    android:backgroundTint="@color/white"
                    android:text="Submit" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="150dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="22dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:indeterminateTint="@color/button_txt_color"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="@color/white"
                    android:visibility="gone"
                    android:indeterminateTintMode="src_atop" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>











</androidx.constraintlayout.widget.ConstraintLayout>